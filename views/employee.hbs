<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Codefreak</title>
</head>

<body>

    {{>navbar}}
    <input type="hidden" value={{usertoken}} id="token" />
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Experience</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each empDetails}}
                <tr>
                    <th>{{this.empName}}</th>
                    <th>{{this.empEmail}}</th>
                    <th>{{this.empExperience}}</th>
                    <th>
                        <a href="update/{{this._id}}"><button type="button" class="btn btn-primary">Edit</button></a>
                        <a href="delete/{{this._id}}"><button type="button" class="btn btn-danger">Delete</button></a>
                    </th>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <script>
        const login = document.getElementById("login");
        const reg = document.getElementById("reg");
        let cookie = document.cookie;
        if (cookie.split("=")[1] != undefined) {
            let cookiepart2 = cookie.split(";")[1];
            const jwtcookie = cookiepart2.split("=")[1];
            const token = document.getElementById("token").value;
            if (jwtcookie == token) {
                login.style.display = "none";
                reg.style.display = "none";
            }
        }
    </script>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>


<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Codefreak</title>
</head>

<body>


    {{>navbar}}

    <div class="container mt-4">
        <form action="/uemp" method="POST">
            <input type="hidden" value={{empId}} name="empId" />
            {{#each empD}}
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Name</label>
                <input type="text" class="form-control" name="uname" id="exampleFormControlInput1" placeholder="Name"
                    value="{{this.empName}}">
            </div>

            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Email Address</label>
                <input type="email" class="form-control" name="email" id="exampleFormControlInput1"
                    placeholder="Email address" value="{{this.empEmail}}">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Contact Number</label>
                <input type="text" class="form-control" name="number" id="exampleFormControlInput1"
                    placeholder="Contact number" value={{this.empNumber}}>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Password</label>
                <input type="text" class="form-control" name="pass" id="exampleFormControlInput1" placeholder="Password"
                    value="{{this.empPass}}">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Address</label>
                <textarea class="form-control" name="address" id="txtarea" rows="3" placeholder="Address"
                    value="{{this.empAddress}}"></textarea>
            </div>

            <label for="exampleFormControlTextarea1" class="form-label">Experience</label>
            <select class="form-select" name="exp" aria-label="Default select example" id="opts">
                <option value="1yr" id="1yr">1yr</option>
                <option value="2yr" id="2yr">2yr</option>
                <option value="3yr" id="3yr">3yr</option>
            </select>
            <input type="hidden" value="{{this.empExperience}}" id="exp">
            <input type="hidden" value="{{this.empAddress}}" id="add">
            {{/each}}
            <button type="submit" class="btn btn-primary mt-4">Submit</button>
    </div>
    </form>

    </div>

    <script>
        const exp = document.getElementById('exp').value;
        document.getElementById(exp).selected = true
        // set address via js
        const address = document.getElementById("add").value;
        document.getElementById('txtarea').value = address;

        const login = document.getElementById("login");
        const reg = document.getElementById("reg");
        let cookie = document.cookie;
        if (cookie.split(";")[1] != undefined) {
            login.style.display = "none";
            reg.style.display = "none";
        }
    </script>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
